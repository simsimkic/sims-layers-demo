<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Light">white</Color>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}"/>

    <Color x:Key="LightBlue">#00a8f1</Color>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}"/>

    <Color x:Key="Blue">#027bb0</Color>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}"/>
</ResourceDictionary>