<UserControl x:Class="SimsLayersDemo.View.Util.MenuSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimsLayersDemo.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource MenuBorder}">
        <StackPanel Style="{StaticResource LightStackPanel}">
            <TextBlock Style="{StaticResource LightBlueMenuTextBlock}" Text=" Transaction Options: "/>
            <Button Style="{StaticResource MenuButton}" Click="AddTransaction_Click" Content="     Add Transaction"/>

            <TextBlock Style="{StaticResource LightBlueMenuTextBlock}" Text=" Loan Options: "/>
            <Button Style="{StaticResource MenuButton}"  Click="AddLoan_Click" Content="     Add Loan"/>
        </StackPanel>
    </Border>
</UserControl>
